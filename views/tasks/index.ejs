<!DOCTYPE html>
<html lang="en">
<head>
    <title>Home</title>
    <%- include("../partials/head.ejs") %>
</head>
<body>
    <div class="container">
        <h1>Task Tracker</h1>
        <nav>
            <ul>
                <li>
                    <a href="/">Home</a>
                </li>
                <li>
                    <a href="/tasks/new">Create a new Task</a>
                </li>
            </ul>
        </nav>
        <main>
            <h2>Tasks</h2>
            <ul>
                <% for(let i = 0; i < tasks.length; i++) { %>
                    <li>
                        <%=tasks[i].name%>
                    </li>
                <% } %>
            </ul>
            <div class="table-container">
                <table class="u-full-width" id="task-table">
                    <thead>
                        <tr>
                            <th class="task-table-heads" id="task-table-name">Name</th>
                            <th>Date</th>
                            <th>Details</th>
                            <th>Category</th>
                            <th>Tags</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < tasks.length; i++) { %>
                            <tr>
                                <td><%=tasks[i].name%></td>
                                <td><%=tasks[i].date%></td>
                                <td><%=tasks[i].details%></td>
                                <td><%=tasks[i].category%></td>
                                <td><%=tasks[i].tags%></td>
                                <td><a href="/tasks/<%=tasks[i]._id%>"><button>Edit</button></a></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
<script>
    const sortTable = (n) => {
        let table, rows, switching, i, x, y, shouldSwitch, dir, switchcount = 0
        table = $("#task-table")
        switching = true
        dir = "asc"
        while(switching) {
            switching = false
            rows = table.rows
            for ( let i = 1; i < (rows.length - 1); i++){
                shouldSwitch = false
                x = rows[i].$("td")[n]
                y = rows[i + 1].$("td")[n]
                if (dir === "asc") {
                    if (x.innerHTML.toLowerCase() > y.innerHTML.toLowerCase()) {
                        shouldSwitch = true
                        break
                    }
                } else if (dir === "desc") {
                    if (x.innerHTML.toLowerCase() < y.innerHTML.toLowerCase()) {
                        shouldSwitch = true
                        break
                    }
                }
            }
        } 
        if (shouldSwitch) {
            rows[i].parentNode.insertBefore(rows[i + 1], rows[i])
            switching = true
            switchcount ++
        } else {
            if (switchcount == 0 && dir == "asc") {
                dir = "desc"
                switching = true
            }
        }
    }
    $( () => {
        $("#task-table-name").on("click", () => {
            sortTable(0)
            console.log("working")
        })

    })
</script>
</body>
</html>